<style>
    * {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        margin: 0;
        padding: 0;
    }
    html{
        height: 100%;
    }
    body{
        height: 100%;
        background:linear-gradient(to top, rgb(95, 63, 4), rgb(133, 75, 21)) ;
        background-repeat: no-repeat;
        overflow-y: hidden;
        overflow-x: hidden;
    }
    
    header{
        width: 100%;
        height: 60px;
        background:linear-gradient(to top, tomato, orange);
    }
    #carrinho{
        height: 30px;
        float: right;
        margin: 12px;
        cursor: pointer;
    }
    header > h1{
        color: rgb(255, 255, 255);
    }
    #l_bt{
        margin-top: 12px;
        margin-left: 12px;
        cursor: pointer;
    }
    #menu_l{
        position: absolute;
        height: 100%;
        width: 0%;
        background:linear-gradient(to top, orange, tomato);
        border-right: solid 1px saddlebrown;
    }
    #menu_l > a {
        display: none;
        color: white;
        text-decoration: none;
        font-size: 2em;
        width: 100%;
    }
    #menu_l > hr{
        display: none;
        border-color: saddlebrown;
    }
    .first_section, .first_section1{
        display: flex;
        justify-content: space-between;
        color: whitesmoke;
        align-items: center;
        height: 5em;
        background:linear-gradient(to top, rgb(109, 71, 0), rgb(165, 126, 42)) ;
    }
    .first_section1{
        display: flex;
    }
    .img_section{
        margin-left: 10px;
        height: 90%;
        width: 7em;
        border-radius: 5px;
        box-shadow: 0px 0px 5px whitesmoke;
    }
    .title_section{
        display: inline-block;
        margin-left: 10px;
    }
    button{
        background-color: transparent;
        border: none;
    }
    .enter_section > button > img{
        height: 60px;
        width: 60px;
        margin-right: 10px;
        cursor: pointer;
    }
    .enter_section > img{
        height: 60px;
        width: 60px;
        margin-right: 10px;
        cursor: pointer;
    }
    .input_data{
        display: none;
    }
    select{
        position: absolute;
        right: 10%;
        margin-top: 20px;
        background-color: rgb(165, 126, 42);
        color: white;
        width: 6em;
    }
    .prec{
        font: normal 14pt consolas;
        color: lightgray;
    }
    #modal{
        display: none;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: whitesmoke;
        border-radius: 20px;
        opacity: 1;
        width: 50%;
        height: 50%;
    }
    table{
        margin: auto;
    }
    th{
        border: solid 1px gray;
    }
    #close{
        float: right;
        color: red;
        font: normal 18pt arial;
        width: 30px;
        margin: 10px;
    }
</style>